<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Escriba el mensaje y luego clickee el canal a ser enviado"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_height="wrap_content"
        android:text="Escriba el mensaje y luego clickee el canal a ser enviado"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_height="wrap_content"
        android:text="Escriba el mensaje y luego clickee el canal a ser enviado"
        android:textSize="20sp" />



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_col2_measures_1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView3"
        android:orientation="horizontal" >



    <ListView

        android:id="@+id/listViewNTime"
        android:layout_width="300px"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"

        />
    <ListView

        android:id="@+id/listViewSTime"
        android:layout_width="300px"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/listViewNTime"
        android:layout_below="@+id/textView3"

        />
    <ListView

        android:id="@+id/listViewDiff"
        android:layout_width="300px"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/listViewSTime"
        android:layout_below="@+id/textView3"

        />

    </LinearLayout>


</RelativeLayout>
